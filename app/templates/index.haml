%article
  .description
    :markdown
      #{blog['description']}

  %nav
    %a.github{href: '/github'}
      %img{src: image_path('github.svg'),   alt:'Github'}
    %a.linkedin{href: '/linkedin'}
      %img{src: image_path('linkedin.svg'), alt:'Linked In'}
    %a.twitter{href: '/twitter'}
      %img{src: image_path('twitter.svg'),  alt:'Twitter'}

  %ul.posts
    - for post in posts
      %li
        %img.type{src: image_path("#{post['type']}.svg")}
        %a{href: "/blog/#{post['id']}/#{post['slug']}"}
          %strong= post['title']
        %br
        %small
          = Time.parse(post['date']).strftime('%b %d, %Y')
          %img.tag{src: image_path('tag.svg')}
          = post['tags'].map { |tag| "##{tag}" }.join(', ')